<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="91.2dp"
        android:layout_height="137.7dp"
        android:src="@drawable/a"
        />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageView"
        android:layout_alignParentRight="@id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_alignParentTop="true"
        android:paddingLeft="10dp"
        android:paddingRight="7dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="The Quick Brown Fox Jumps Over The Lazy Dog. The Quick Brown Fox Jumps Over the lazy dog"
            android:maxLines="3" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="horizontal"
            android:layout_alignParentLeft="true">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1">

                <ImageView
                    android:layout_width="41.2dp"
                    android:layout_height="38.7dp"
                    android:src="@drawable/subadmin"
                    android:id="@+id/subadmin" />

                </LinearLayout>




            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:paddingRight="10dp"
                android:gravity="bottom|right">

                <ImageView
                    android:layout_width="24.7dp"
                    android:layout_height="20.5dp"
                    android:id="@+id/img15_1"
                    android:src="@drawable/locationnew"
                    android:layout_margin="5dp"/>

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="21.7dp"
                    android:id="@+id/img15_2"
                    android:src="@drawable/noti"
                    android:layout_margin="5dp"/>

                </LinearLayout>



            </LinearLayout>

</RelativeLayout>

</RelativeLayout>