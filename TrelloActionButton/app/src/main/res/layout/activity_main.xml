<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#A06A99"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="6dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageButton
        android:id="@+id/item1"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="6dp"
        android:text="+"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:background="@drawable/circular_fab"
        android:layout_centerHorizontal="true"
        android:visibility="gone"

        />
    <ImageButton
        android:id="@+id/item2"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="6dp"
        android:background="@drawable/circular_fab"
        android:layout_below="@+id/item1"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
        <ImageButton
            android:id="@+id/item3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="6dp"
            android:background="@drawable/circular_fab"
            android:layout_below="@+id/item2"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
        <ImageButton
            android:id="@+id/item4"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_margin="6dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/circular_fab"
            android:layout_below="@+id/item3"
            android:layout_centerHorizontal="true"
            android:visibility="gone"/>
    <View
        android:id="@+id/view"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="2dp"
        android:layout_below="@+id/item4"
        android:layout_alignParentRight="true"
        android:background="@drawable/my_shadow" />
    <ImageButton
        android:id="@+id/btnFab"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_below="@+id/item4"
        android:layout_alignParentRight="true"
        android:background="@drawable/circular_fab"
        />

        <TextView
            android:text="Text = 1"
            android:background="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text1"
            android:visibility="gone"
            android:layout_marginRight="10dp"
            android:layout_marginTop="12dp"
            android:layout_alignTop="@+id/item1"
            android:layout_toLeftOf="@+id/item1"
            android:layout_toStartOf="@+id/item1" />

        <TextView
            android:id="@+id/text2"
            android:text="Text = 2"
            android:background="#fff"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item2"
            android:layout_alignLeft="@+id/text1"
             />

        <TextView
            android:id="@+id/text3"
            android:text="Text = 3"
            android:background="#fff"
            android:visibility="gone"
            android:layout_marginTop="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/item3"
            android:layout_alignLeft="@+id/text2"
             />

        <TextView
            android:id="@+id/text4"
            android:text="Text = 4"
            android:background="#fff"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignTop="@+id/item4"
            android:layout_alignLeft="@+id/text3"
             />

    </RelativeLayout>
</RelativeLayout>
