<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical">

    <TextView
        android:layout_margin="3dp"
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Zeeshan Haneef"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/unitsDesc"
        android:layout_margin="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" units desc" />

    <LinearLayout
        android:layout_margin="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/urgency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urgency: "
            android:textStyle="bold" />

        <TextView
            android:id="@+id/urgent_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="urgent" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact at: " />

        <TextView
            android:id="@+id/contactNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123456789" />
    </LinearLayout>

    <TextView
        android:layout_margin="3dp"
        android:id="@+id/addIns"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Additional Instruction" />

    <TextView
        android:layout_margin="3dp"
        android:id="@+id/addIns_Desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="call me when u reach hospital" />

    <LinearLayout
        android:layout_margin="3dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/Volunteer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Volunteers uptill no: " />

        <TextView
            android:id="@+id/VolunterCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/currentRequirement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current requirement: " />

        <TextView
            android:id="@+id/currentRequirement_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />
    </LinearLayout>

    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_weight="0.5"
            android:id="@+id/Vol"
            android:text="Volunteer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/comm"
            android:layout_weight="0.5"
            android:layout_toRightOf="@id/Vol"
            android:text="Comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>


</LinearLayout>