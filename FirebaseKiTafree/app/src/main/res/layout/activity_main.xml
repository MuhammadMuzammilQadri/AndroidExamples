<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.faiz.firebasekitafree.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:id="@+id/status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Hello World!" />

        <TextView
            android:id="@+id/status2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="center"
            android:text="Hello World!" />

        <Button
            android:id="@+id/online"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="go online" />

        <Button
            android:id="@+id/offline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="go offline" />

        <Button
            android:id="@+id/inc_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="increment value" />

        <Button
            android:id="@+id/dec_val"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="decrement value" />

        <Button
            android:id="@+id/inc_trans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="increment transaction" />

        <Button
            android:id="@+id/dec_trans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="decrement transaction" />

        <Button
            android:id="@+id/inc_trans_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="increment transaction group" />

        <Button
            android:id="@+id/dec_trans_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="decrement transaction group" />

    </LinearLayout>
</ScrollView>
